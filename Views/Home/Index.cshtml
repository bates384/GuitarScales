<script src="~/Scripts/Frets.js"></script>

<div class="jumbotron">
    <h1>Scale Generator</h1>
    <div style="text-align:center">
        <form class="form-control">
            Select Key:
            <select id="id_root" name="root">
                <option value="A">A</option>
                <option value="A#">A#/Bb</option>
                <option value="B">B</option>
                <option value="C" SELECTED>C</option>
                <option value="C#">C#/Db</option>
                <option value="D">D</option>
                <option value="D#">D#/Eb</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="F#">F#/Gb</option>
                <option value="G">G</option>
                <option value="G#">G#/Ab</option>
            </select>

            <select id="id_scale" name="scale">
                <option value="Major">Major</option>
                <option value="Minor">Minor</option>
                <option value="Pentatonic Major">Pentatonic Major</option>
                <option value="Pentatonic Minor" selected>Pentatonic Minor</option>
            </select>
            <button type="button" onclick="revealFretboard()">Submit</button>
        </form>
    </div>

</div>


<div id="fretboard" style="display:none; position:relative; overflow-x:scroll; border-radius: 6px;">
    <img src="~/Content/Images/guitarfrets.png">
    <div id="notes">

    </div>
</div>

<div>
    <form class="form-control">
        Get Triad:
        <select id="chord_root" name="Chord Root">
        </select>
        <button type="button" onclick="showTriad()">Show Triad</button>
        <button type="button" onclick="normalizeFretboard()">Reset</button>
    </form>
</div>


